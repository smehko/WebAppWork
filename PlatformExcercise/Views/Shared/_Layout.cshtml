<script>

    $(function () {
        LoadData();
        $("#btnSave").click(function () {
            var op = {};
            op.Id = $("#oId").val();
            op.Opomba = $("#opomba").val();
            $.ajax({
                type: "POST",
                url: '@Url.Action("CreateOpomba")',
                data: '{dto: ' + JSON.stringify(op) + '}',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function () {
                    LoadData();
                },
                error: function () {
                    alert("Error while inserting data");
                }
            });
            return false;
        });
    });

