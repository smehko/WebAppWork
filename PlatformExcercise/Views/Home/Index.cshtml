<div class="container">
    <div class="table-responsive">
        <h2>Produkti</h2>
        <button type="button" class="btn btn-primary mb-2" onclick="LoadData()">Osveži</button>
        <table class="table table-bordered table-hover" id="produkti">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Produkt</th>
                    <th>Stranka</th>
                    <th>Cena</th>
                    <th>Opomba</th>
                    <th>Datum Opombe</th>
                    <th>Akcija</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Dodaj opombo</h4>
                </div>
                <div class="modal-body">
                    <input name="opomba" type="text" id="opomba" placeholder="Vnesi opombo" />
                    <input type="hidden" name="oId" id="oId" value="test" />
                </div>
                <div class="modal-footer">
                    <input class="btn btn-primary" name="submitButton" id="btnSave" value="Shrani" type="button">
                </div>
            </div>

        </div>
    </div>
</div>